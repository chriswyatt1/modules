nextflow_process {

    name "Test Process RATTLE_CLUSTERSUMMARY"
    script "../main.nf"
    process "RATTLE_CLUSTERSUMMARY"

    tag "modules"
    tag "modules_nfcore"
    tag "rattle"
    tag "rattle/clustersummary"

    test("test-rattle") {

        when {
            process {
                """
                input[0] = [
				    [ id:'test', single_end:false ], // meta map
				    [ file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/nanopore/fastq/test.fastq.gz', checkIfExists: true) ]
				]
                input[1] = [
				    [ id:'test', single_end:false ], // meta map
				    // cluster file from rattle [ file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/nanopore/fastq/test.fastq.gz', checkIfExists: true) ]
				]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }

}
